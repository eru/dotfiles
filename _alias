# ls
alias la='ls -lah'
alias ll='ls -lh'

# rm, mv, cp する時は確認する
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# よく間違えるねん
alias cd..='cd ..'

# tmux
alias tmux='tmux -u'
alias tm='tmux'
alias ta='tmux attach'
alias tl='tmux list-sessions'

# ssh
# 問題出るまではこれで誤魔化す
alias ssh='ssh -t'

# git
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gba='git branch -a'
alias gci='git commit'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gpl='git pull'
alias gp='git push'
alias gst='git stash'
alias gsl='git stash list'
alias gsp='git stash pop'
alias gss='git status -s'
alias gm='git merge --no-ff'

# du/df
alias du='du -h'
alias df='df -h'
alias duh='du -h ./ --max-depth=1'

# su
alias su='su -l'

# less
alias less='less -iRM'

# vim
alias vi='vim'

# extract
alias ex='extract'

# OS別の設定
case "${OSTYPE}" in
    darwin*)
        # realpath
        alias fullpath='grealpath -s'
        # java
        alias javac='javac -J-Dfile.encoding=UTF-8'
        alias java='java -Dfile.encoding=UTF-8'
        # colordiff
        alias diff='colordiff'
        # coreutils ls
        alias ls='gls --color'
        # spotlight locate
        alias locate='mdfind -name'
        ;;
    linux*)
        # realpath
        alias fullpath='realpath -s'
        ;;
esac
alias fpath='fullpath'
alias fp='fullpath'

# colors
function pcolor() {
    for ((f = 0; f < 255; f++)); do
        printf "\e[38;5;%dm %3d#\e[m" $f $f
        if [[ $f%8 -eq 7 ]] then
            printf "\n"
        fi
    done
    echo
}

# plantuml
alias plantuml='java -jar /usr/local/bin/plantuml.jar'

# ag
alias ag='ag --pager="less"'
vag () {
    vim -c "Ag $1";
}
