{
    "default_module": "powerline.segments.common",
    "segment_data": {
        "hostname": {
            "before": "@"
        }
    },
    "segments": {
        "left": [
            {
                "name": "hostname"
            }
        ],
        "right": [
            {
                "name": "uptime",
                "priority": 50
            },
            {
                "name": "system_load",
                "priority": 50
            },
            {
                "name": "date",
                "args": {
                    "format": "%a %m/%d %H:%M",
                    "istime": true
                }
            }
        ]
    }
}
